# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# NewsAPI Configuration
NEWS_API_KEY=your-newsapi-key-here

# Application Configuration
MAX_ARTICLES_PER_TOPIC=20
MIN_WORD_COUNT=300

# Scoring Configuration (weights should sum to 1.0)
READABILITY_WEIGHT=0.12
NER_DENSITY_WEIGHT=0.12
SENTIMENT_WEIGHT=0.12
TFIDF_RELEVANCE_WEIGHT=0.20
RECENCY_WEIGHT=0.12
REPUTATION_WEIGHT=0.12
TOPIC_COHERENCE_WEIGHT=0.20

# Reputation Configuration
REPUTATION_DATA_PATH=curator/data/reputation.json

# Diversity and Clustering Configuration
USE_EMBEDDING_CLUSTERING=1
CLUSTER_CAP=3
CLUSTERING_THRESHOLD=0.75
DOMAIN_CAP=2
DUP_SIM_THRESHOLD=0.97
DIVERSIFY_RESULTS=1

# Embeddings Configuration
USE_EMBEDDINGS_RELEVANCE=0
EMBEDDINGS_MODEL_NAME=all-MiniLM-L6-v2

# Redis Cache Configuration
# Option 1: Use Redis URL (recommended for production)
# REDIS_URL=redis://localhost:6379/0

# Option 2: Use individual Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your-redis-password

# Cache TTL Settings (in seconds)
CACHE_ARTICLE_TTL=3600    # 1 hour
CACHE_SCORECARD_TTL=1800  # 30 minutes

# Background Jobs Configuration (Celery + Redis)
# Redis URL for Celery broker and result backend
# REDIS_URL=redis://localhost:6379/0  # Uncomment if different from cache Redis

# Celery Worker Configuration
CELERY_LOG_LEVEL=INFO
CELERY_CONCURRENCY=4
CELERY_ALWAYS_EAGER=False  # Set to True for synchronous testing (disables background processing)

# Job Processing Settings
BACKGROUND_JOB_THRESHOLD=5  # Use background processing for batches larger than this

# Database Configuration
# Option 1: Use full database URL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/curator
# DATABASE_URL=sqlite:///curator.db

# Option 2: Use individual database settings
DB_TYPE=sqlite  # sqlite or postgresql
DB_HOST=localhost
DB_PORT=5432
DB_USER=curator
DB_PASSWORD=your-db-password
DB_NAME=curator
DB_PATH=curator.db  # For SQLite only

# Data Retention Policy (in days)
ARTICLE_RETENTION_DAYS=90   # Keep articles for 90 days
SCORECARD_RETENTION_DAYS=30 # Keep scorecards for 30 days